{

  "name": "NameyMcNameFace",
  "short_name": "NMNF",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "An extension to generate account info quick and easy!",
  "page_action": {
    /*"default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },*/
    "default_title": "NameyMcNameFace",
    "default_popup": "popup.html"
  },
  /*"icons": {
    "19": "images/icon19.png",
    "38": "images/icon38.png"
  },*/
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "homepage_url": "https://github.com/ZakariaRidouh/NameyMcNameFace",
  "content_scripts": [{
    "matches": ["*://*.bing.com/*", "*://*.microsoft.com/*", "*://*.live.com/*", "*://*.signup.live.com/*"],
    "js": ["chance.min.js", "namey.js"]
  }],
  "offline_enabled": false,

  "options_page": "options.html"

}
