{

  "name": "NameyMcNameFace",
  "short_name": "NMNF",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "An extension to generate account info quick and easy!",

  "browser_action": {
    "default_title": "NameyMcNameFace!",
    "default_popup": "popup.html"
  },

  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "homepage_url": "https://github.com/ZakariaRidouh/NameyMcNameFace",
  "permissions": ["tabs", "storage", "*://signup.live.com/*"],
  "offline_enabled": false,

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
